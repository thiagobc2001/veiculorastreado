{
  "cli": {
    "version": ">= 7.0.0",
    "appVersionSource": "remote",
    "promptToConfigurePushNotifications": false
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "credentialsSource": "remote",
        "simulator": false,
        "experimental": {
          "preInstallCommand": "pod repo update"
        }
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "credentialsSource": "remote",
        "simulator": true,
        "experimental": {
          "preInstallCommand": "pod repo update"
        }
      },
      "android": {
        "buildType": "apk",
        "gradleCommand": ":app:assembleRelease",
        "credentialsSource": "remote"
      },
      "env": {
        "ANDROID_KEYSTORE_PASSWORD": "${ANDROID_KEYSTORE_PASSWORD}",
        "ANDROID_KEY_PASSWORD": "${ANDROID_KEY_PASSWORD}"
      }
    },
    "production": {
      "ios": {
        "credentialsSource": "remote",
        "autoIncrement": true,
        "experimental": {
          "preInstallCommand": "pod repo update"
        }
      },
      "android": {
        "buildType": "app-bundle",
        "credentialsSource": "remote"
      },
      "env": {
        "ANDROID_KEYSTORE_PASSWORD": "${ANDROID_KEYSTORE_PASSWORD}",
        "ANDROID_KEY_PASSWORD": "${ANDROID_KEY_PASSWORD}"
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "thiago@belcamsolutions.com",
        "ascAppId": "com.vrveiculorastreado.app"
      },
      "android": {}
    }
  }
}
